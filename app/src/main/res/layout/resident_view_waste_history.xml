<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Waste History"
        android:textAlignment="center"
        android:layout_marginBottom="30dp"
        android:textSize="28dp"/>

    <LinearLayout
        android:id="@+id/statusWindow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/logTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Waste Disposal" />

        <TextView
            android:id="@+id/logDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"/>

        <TextView
            android:id="@+id/logStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status: Accepted/Valid Disposal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/statusWindow1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/logTitle1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Waste Disposal" />

        <TextView
            android:id="@+id/logDescription1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"/>

        <TextView
            android:id="@+id/logStatus1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status: Under Review" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/statusWindow2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/logTitle2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Waste Disposal" />

        <TextView
            android:id="@+id/logDescription2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"/>

        <TextView
            android:id="@+id/logStatus2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status: Denied/Invalid Disposal" />
    </LinearLayout>
</LinearLayout>